<p id="hive_name" class="u-custom-font u-font-montserrat u-text u-text-custom-color-17 u-text-default u-text-1">
    <%=hive.hive_name%>
</p>

<%  let src="/public/icons/Rectangle.svg" 
    let avatar=hive.hive_photo_url 
    if (avatar !="/public/images/null" ) {
        src=avatar 
    } %>

    
<img id="hive_image" class="u-image u-image-default u-preserve-proportions u-image-1" src="<%=src%>"
    data-image-width="375" data-image-height="375">

<div class="custom-expanded u-border-3 u-border-custom-color-15 u-container-style u-group u-white u-group-5">
    <div class="u-container-layout u-container-layout-5">
        <p class="u-custom-font u-font-montserrat u-text u-text-custom-color-17 u-text-default u-text-6"> <%=hive.nest_amount%> </p>
        <p class="u-custom-font u-font-montserrat u-text u-text-custom-color-17 u-text-default u-text-5"> Количество гнёзд:</p>
    </div>
</div>

<div class="custom-expanded u-border-3 u-border-custom-color-15 u-container-style u-group u-white u-group-5">
    <div class="u-container-layout u-container-layout-5">
        <p class="u-custom-font u-font-montserrat u-text u-text-custom-color-17 u-text-default u-text-6"> <%=hive.store_amount%> </p>
        <p class="u-custom-font u-font-montserrat u-text u-text-custom-color-17 u-text-default u-text-5"> Количество магазинов:</p>
    </div>
</div>

<div class="custom-expanded u-border-3 u-border-custom-color-15 u-container-style u-group u-white u-group-5">
    <div class="u-container-layout u-container-layout-5">
        <p class="u-custom-font u-font-montserrat u-text u-text-custom-color-17 u-text-default u-text-6"> <%=hive.queen_age%> год(а) </p>
        <p class="u-custom-font u-font-montserrat u-text u-text-custom-color-17 u-text-default u-text-5"> Возраст матки: </p>
    </div>
</div>

<div class="custom-expanded u-border-3 u-border-custom-color-15 u-container-style u-group u-white u-group-6">
    <div class="u-container-layout u-container-layout-6">
        <p class="u-custom-font u-font-montserrat u-text u-text-custom-color-17 u-text-default u-text-8">
            <textarea class="u-border-none u-group-8" id="description"><%=hive.description%></textarea>
        </p>
    </div>
</div>