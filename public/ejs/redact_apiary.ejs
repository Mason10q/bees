<select id="hive_amount" value="<%= apiary.length %>">
    <% for (let i = 1; i < 101; i++) { %>
        <option><%=i %></option>
    <% } %> 
</select>

<input type="text" id="apiary_name" placeholder="Новая пасека" value="<%= apiary[0].apiary_name %>">

<img id="apiary_image" src="<%= apiary[0].apiary_photo_url %>">        
    <input id="image_input" type="file" accept="image/*">
</img>

<table>
    <thead>
        <tr>
            <td>Название</td>
            <td>Гнёзд</td>
            <td>Магазинов</td>
            <td>Характер</td>
            <td>Возраст матки</td>
        </tr>
    </thead>
    <tbody id="hive_table_body">
        <% apiary.forEach((hive) => { %>
            <tr>
                <td>
                    <input class="data" name="hive_name" placeholder='Улей' value="<%= hive.hive_name %>" required/>
                </td>
                <td>
                    <select class="data" name="nest_amount" value="<%= hive.nest_amount %>">
                        <% for (let i = 1; i < 101; i++) { %>
                            <option><%=i %></option>
                        <% } %>                
                    </select>
                </td>
                <td>
                    <select class="data" name="store_amount" value="<%= hive.nest_amount %>">
                        <% for (let i = 1; i < 101; i++) { %>
                            <option><%=i %></option>
                        <% } %>                
                    </select>
                </td>
                <td>
                    <input class="data" name="bee_nature" placeholder='Характер' value="<%= hive.bee_nature %>" required/>
                </td>
                <td>
                    <select class="data" name="queen_age" value="<%= hive.queen_age %>">
                        <% for (let i = 0; i < 6; i++) { %>
                            <option><%=i %> год(а)</option>
                        <% } %>
                    </select>
                </td>
            </tr>
        <% }) %>
    </tbody>
</table>